<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/top_margin"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_width="400dp"
        android:layout_height="140dp">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/radius"
            android:layout_width="match_parent"
            android:elevation="@dimen/radius"
            app:cardPreventCornerOverlap="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name_cantact"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="Puneet Kumar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/post_contact"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:text="Puneet Kumar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <TextView
                    android:layout_marginTop="@dimen/top_margin"
                    android:layout_gravity="center"
                    android:id="@+id/phone_no_contact"
                    android:drawableStart="@drawable/ic_tc_phone"
                    android:text="9807391504"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/email_contact"
                    android:drawableStart="@drawable/ic_tc_mail"
                    android:text="puneet16638@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/email_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_mail" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/phone_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_phone" />

</RelativeLayout>