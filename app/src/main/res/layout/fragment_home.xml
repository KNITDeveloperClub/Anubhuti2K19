<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_home"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:screenOrientation="portrait"
        app:cardCornerRadius="10dp"
        android:layout_height="240dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/intro"
            android:layout_height="match_parent" />

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/counter"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isHideTimeBackground="true"
                app:isShowDay="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:timeTextColor="@color/white"
                app:timeTextSize="22sp"
                app:isTimeTextBold="true"
                app:suffixGravity="center"
                app:suffixTextColor="@color/white"
                app:suffixTextSize="12sp"
                app:suffixDay="Days"
                app:suffixHour="Hours"
                app:suffixMinute="Minutes"
                app:suffixSecond="Seconds" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <FrameLayout
            android:layout_margin="10dp"
            android:id="@+id/youtube_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Upcoming Person"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_serif_bold"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
        </LinearLayout>

            <android.support.v7.widget.RecyclerView

                android:layout_marginTop="10dp"
                android:id="@+id/upcoming_recycler"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Glorious Past"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_serif_bold"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/past_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Agni Theme of the Fest"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_serif_bold"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardElevation="5dp"
            android:screenOrientation="portrait"
            app:cardCornerRadius="10dp"
            android:layout_height="240dp">

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/theme"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="-90"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Address"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_serif_bold"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_fire_icon"
                android:rotation="90"

                android:layout_height="wrap_content" />
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/address_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</ScrollView>