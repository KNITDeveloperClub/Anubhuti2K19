<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="180dp"
        android:id="@+id/team_profile_image"
        android:elevation="7dp"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerHorizontal="true"
        android:layout_height="180dp"
        app:civ_border_color="#fff"
        app:civ_border_width="1dp"
        />

    <android.support.v7.widget.CardView
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="7dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/radius"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <RelativeLayout
            android:background="@drawable/background_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/team_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/noto_serif_bold"
                android:text="Puneet Kumar"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_post_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android App Developer"
                android:fontFamily="@font/noto_serif"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/team_name_textview"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/team_post_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team_email"
                    android:layout_width="wrap_content"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_mail" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team_fb"
                    android:layout_width="75dp"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="75dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_facebook"

                    android:layout_centerHorizontal="true"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team_phone"
                    android:elevation="10dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_phone_green" />


            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>